{
  "name": "easy_actions",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "build": "npx parcel build src/index.html --out-dir build/release --public-url ./",
    "start": "npx parcel src/index.html --out-dir build/debug",
    "tsc": "npx tsc --noEmit",
    "postinstall": "rm -rf node_modules/@types/react-native"
  },
  "pre-commit": [
    "tsc"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nathanielgrossman/easy_actions.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nathanielgrossman/easy_actions/issues"
  },
  "babel": {
    "plugins": [
      "babel-plugin-styled-components"
    ]
  },
  "homepage": "http://easyactions.site",
  "jest": {
    "preset": "ts-jest",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleNameMapper": {
      "\\.(scss)$": "<rootDir>/src/__mocks__/styleMock.ts"
    },
    "testMatch": [
      "**/__tests__/*.(test|spec).(ts|tsx|js)"
    ]
  },
  "dependencies": {
    "@types/jest": "^26.0.0",
    "components": "^0.1.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "styled-components": "^5.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@types/react": "16.9.35",
    "@types/react-dom": "^16.9.8",
    "@types/styled-components": "^5.1.0",
    "babel-plugin-styled-components": "^1.10.7",
    "jest": "^26.0.1",
    "parcel-bundler": "^1.12.4",
    "pre-commit": "^1.2.2",
    "ts-jest": "^26.1.0",
    "typescript": "^3.9.3"
  }
}
